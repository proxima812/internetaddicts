const groupsCounter = (await getCollection('groups')).length



const dayOrder = {
  –ü–æ–Ω–µ–¥–µ–ª—å–Ω–∏–∫: 1,
  –í—Ç–æ—Ä–Ω–∏–∫: 2,
  –°—Ä–µ–¥–∞: 3,
  –ß–µ—Ç–≤–µ—Ä–≥: 4,
  –ü—è—Ç–Ω–∏—Ü–∞: 5,
  –°—É–±–±–æ—Ç–∞: 6,
  –í–æ—Å–∫—Ä–µ—Å–µ–Ω—å–µ: 7,
}

function sortGroupsByDay(groups) {
  return groups.sort((a, b) => {
    return dayOrder[a.data.when] - dayOrder[b.data.when]
  })
}
