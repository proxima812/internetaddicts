<script>
 const backToTopButton = document.getElementById("toUp");

 window.addEventListener("scroll", function () {
  if (window.pageYOffset > 100) {
   backToTopButton.style.opacity = "1";
  } else {
   backToTopButton.style.opacity = "0";
